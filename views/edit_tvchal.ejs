                        <form name="videoForm" id="videoForm" action="/edit/tvchannel/<%=user._id%>" method="post" enctype="multipart/form-data">    
                                        
                            <div class="card-body">
                              <div class="row">
                                
                                  <div class="col-12 col-sm-12">
                                      <div class="form-group">
                                          <label for="name">Title*</label>
                                          <input type="text" class="form-control" name="title" id="title" value="<%=user.title%>" placeholder="Enter Video Title" required >
                                      </div>
                                  </div>
                                          <!-- -->
                                           
                                          <div class="col-12 col-sm-6">
                                            <div class="form-group">
                                                <label>Category*</label>
                                                  <select name="video_cat_id" id="video_cat_id" class="form-control"  required>
                                                      <option disabled="" selected="" value="" data-select2-id="2">Select an --option</option>
                                                      <%
                                                      if (videocategories !==null && videocategories !=='') {
                                                          var i=1;
                                                          videocategories.map((result)=>{
                                                      %>
                                                          <option value="<%= result.category_name %>"><%= result.category_name %></option>
                                                      <%    
                                                          i++;
                                                          })
                                                      } %>
                                                      
                                                  </select>
                                            </div>
                                        </div>
                                   <!--  -->
                                   <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                          <label>Url Type*</label required>
                                          <select name="url_type" aria-valuemax="<%=user.url_type%>" id="url_type" class="form-control" required>
                                              <option disabled="" selected="" value="">Select an --option</option>
                                              <option value="hls">hls</option>
                                              <option value="YouTube">YouTube</option>
                                              <option value="rtmp">rtmp</option>
                                              <option value="rtsp">rtsp</option>
                                              <option value="ts">ts</option>
                                              <option value="embed">embed</option>
                                              <option value="daily motion">daily motion</option>
                                              <option value="vimeo">vimeo</option>
                                              <option value="other">other</option>
                                          </select>
                                    </div>
                                </div>
                                  <!--  -->
                                    <div class="col-12 col-sm-12"> 
                                        <div class="form-group">
                                            <label for="url">Url*</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" id="url" name="url" value="<%=user.url%>" placeholder="https://www.youtube.com/watch?v=II2EO3" required >
                                            </div>
                                        </div>
                                    </div>
                                    <!--  -->
                                    <div class="col-12 col-sm-6">
                                            <div class="form-group">
                                                <label for="videoImage">Thumbnail Image*</label>
                                                <input type="file" class="form-control" name="video_image" id="videoImage" >
                                            </div>
                                    </div>
                                    <br>
      
                                      <!--  -->
                                  <div class="col-12 col-sm-6">
                                        <div class="form-group">
                                            <label for="bannerImage">Poster Image*</label>
                                            <input type="file" class="form-control" name="banner_image" id="bannerImage" >
                                        </div>
                                  </div>
                                  <br>
                                     
                                      <!--  -->
                                 
                                      <!--  -->
                                  <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <label for="watch_ads">Unlock Content*</label>
                                        <select class="form-control"  id="target" name="content" id="watch_ads" required>
                                            <option value="free">Free</option> 
                                            <option value="yes">Watch with Ads</option>    
