				<div class="card">
					<div class="card-header">
						<h4>Edit Episode</h4>
                        <button class="btn btn-success  float-right" ><a style="color: beige;" href="/manage_episode/<%=ID4%>">Back</a></button>
					</div>
					<div class="card-body">
                        <form action="/edit_episode/<%=ID3%>" method="post" enctype="multipart/form-data" >
                            <div class="form-row">
                               
                               
                                    <div class="form-group col-md-6">
                                          <label>Url Type</label required>
                                          <select name="url_type"  id="url_type" class="form-control" required>
                                              <option disabled="" selected="" value="">Select an --option</option>
                                              <option value="hls">hls</option>
                                              <option value="YouTube">YouTube</option>
                                              <option value="rtmp">rtmp</option>
                                              <option value="rtsp">rtsp</option>
                                              <option value="ts">ts</option>
                                              <option value="embed">embed</option>
                                              <option value="daily motion">daily motion</option>
                                              <option value="vimeo">vimeo</option>
                                              <option value="other">other</option>
                                          </select>
                                    </div>
                
						
                              <div class="form-group col-md-6">
                                <label >Url</label>
                                <input name="url" type="text" value="<%=match.url%>" class="form-control" placeholder="https://youtu.be/ndl1W4ltcmg">
                              </div>
                              <div class="form-group col-md-6">
                                <label for="inputPassword4">Episode Name</label>
                                <input name="episode_name"  value="<%=match.episode_name%>" type="text" class="form-control"  placeholder="E01 -The End's Beginning">
                              </div>

                              <div class="form-group col-md-6">
                                <label >Base Url</label>
                                <input name="base_url" type="text" value="<%=match.base_url%>" class="form-control" placeholder="base url">
                              </div>
                              <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label for="watch_ads">Unlock Content</label>
                                    <select class="form-control"   id="target" name="unlock_content" id="unlock_content" required>
                                        <option value="free">Free</option> 
                                        <option value="yes">Watch with Ads</option>    
                                        <option value="paid">Subscription</option>
                                        <!-- <option value="rent">Rent</option>    -->
                                    </select>
                                  </div>
                              </div>
                              
                              
                              <div class="col-12 col-sm-6 inv " id="paid">
                                <div class="form-group">
                                    <label>Price</label>
                                      <select name="Manage_Price" id="Manage_Price" class="form-control" >
                                          <option disabled="" selected="" value="" >Select an --option</option>
                                          <%
                                          if (videocategorie !==null && videocategorie !=='') {
                                              var i=1;
                                              videocategorie.map((result)=>{
                                          %>
                                              <option value="<%= result._id%>"><%= result.price %></option>
                                          <%    
                                              i++;
                                              })
                                          } %>
                                          
                                      </select> 
                                    </div>
                                </div>
                             
						

                              <div class="form-group col-md-6">
                                <label for="inputPassword4">Thumbnail</label>
                                <input name="thumbnail_image" type="file" class="form-control" >
                              </div>
                              <div class="form-group col-md-6">
                                <label for="inputPassword4">Poster</label>
                                <input type="file" name="poster" class="form-control"  placeholder="Actor">
                              </div>



                              
                            </div>
                            <div class="form-group col-md-12 ">
                              <label for="inputAddress">Description</label>
                              <textarea name="description" class="form-control" id="" cols="28" rows="3"></textarea>
                            </div>
                            

                            
                            <button type="submit" class="btn btn-primary">Save</button>
                          </form>


